<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_appicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app" />

    <TextView
        android:id="@+id/tv_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_appicon"
        android:layout_alignTop="@id/iv_appicon"
        android:textSize="18dp"
        android:text="程序名称"/>

    <TextView
        android:id="@+id/tv_appcachesize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_appicon"
        android:layout_marginTop="3dp"
        android:layout_below="@id/tv_appname"
        android:text="缓存大小"/>

    <ImageView
        android:id="@+id/iv_delete_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_appicon"
        android:src="@drawable/list_button_clean_pressed"/>

</RelativeLayout>